@model IEnumerable<SuperMarket.Models.Categoria>//lista de categorias

@{
    Layout = "_LayoutAdmin";
}

<h2>Categorias</h2>
<hr>
<a asp-controller="Gestao" asp-action="NovaCategoria" class="btn btn-success">Adicionar Categoria</a>
<hr>

<script>
    $(document).ready( function () {
    $('#TabelaDeCategorias').DataTable({
        "info" : false,
        "language" : {
            "lengthMenu" : "Mostrando _MENU_ registros por página",
            "zeroRecords" : "Resultado não encontrado",
            "info" : "Mostrando página _PAGE_ de _PAGES_",
            "infoEmpty" : "Nenhum resgistro disponível",
            "search" : "Pesquisar:",
            "paginate" : {
                "first" : "Primeiro",
                "last" : "Ultimo",
                "next" : "Próximo",
                "previous" : "Anterior",
            }
        }
    });
    });
</script>

<table id="TabelaDeCategorias" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Ações</th>
        </tr>
        <tbody>
            @foreach (var categoria in Model)
            {
                <tr>
                    <td>@categoria.Id</td>
                    <td>@categoria.Nome</td>
                    <td>
                        <a class="btn btn-success" href="/Gestao/EditarCategoria/@categoria.Id">Editar</a>

                        <form asp-action="Excluir" asp-controller="Categorias" style="display: inline;">
                            <input type="hidden" name="id" id="id" value="@categoria.Id">
                            <button class="btn btn-danger">Excluir</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </thead>
</table>