@model SuperMarket.ValidacaoDTO.PromocaoDTO

@{
    Layout = "_LayoutAdmin";
}

<h3>Nova promoção</h3>
<hr>
<form class="form-horizontal" asp-controller="Promocoes" asp-action="Salvar" method="POST">
    <input type="hidden" asp-for="Id" value="0">
    <label asp-for="Nome">Nome</label>
    <input type="text" asp-for="Nome" class="form-control" placeholder="Nome da promoção">
    <span asp-validation-for="Nome"></span>
    <br>
    <label asp-for="ProdutoId">Produto</label>
    <select class="form-control" asp-for="ProdutoId" asp-items='@(new SelectList(@ViewBag.ListaProdutos,"Id","Nome"))'></select>
    <br>
    <label asp-for="PorcentagemDesconto">Desconto</label>
    <input type="number" step="any" asp-for="PorcentagemDesconto" class="form-control" placeholder="%">
    <span asp-validation-for="PorcentagemDesconto"></span>
    <br>
    <button class="btn btn-success">Cadastrar</button>
</form> 