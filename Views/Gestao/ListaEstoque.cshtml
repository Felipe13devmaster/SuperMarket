@model IEnumerable<SuperMarket.Models.Estoque>//lista de Estoque

@{
    Layout = "_LayoutAdmin";
}

<h2>Estoque</h2>
<hr>
<a asp-controller="Gestao" asp-action="NovoEstoque" class="btn btn-success">Adicionar estoque</a>
<hr>

 <script>
    $(document).ready( function () {
    $('#TabelaDeEstoque').DataTable({
        "info" : false,
        "language" : {
            "lengthMenu" : "Mostrando _MENU_ registros por página",
            "zeroRecords" : "Resultado não encontrado",
            "info" : "Mostrando página _PAGE_ de _PAGES_",
            "infoEmpty" : "Nenhum resgistro disponível",
            "search" : "Pesquisar:",
            "paginate" : {
                "first" : "Primeiro",
                "last" : "Ultimo",
                "next" : "Próximo",
                "previous" : "Anterior",
            }
        }
    });
    });
</script>

<table id="TabelaDeEstoque" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Produto</th>
            <th>Quantidade</th>
            <th>Ações</th>
        </tr>
        <tbody>
            @foreach (var estoque in Model)
            {
                <tr>
                    <td>@estoque.Id</td>
                    <td>@estoque.Produto.Nome</td>
                    <td>@estoque.Quantidade</td>
                    <td>
                        <a class="btn btn-success" href="/Gestao/EditarEstoque/@estoque.Id">Editar</a>

                        <form asp-action="Excluir" asp-controller="Estoques" style="display: inline;">
                            <input type="hidden" name="id" id="id" value="@estoque.Id">
                            <button class="btn btn-danger">Excluir</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </thead>
</table> 