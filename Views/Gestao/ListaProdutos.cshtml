@model IEnumerable<SuperMarket.Models.Produto>//lista de Produtoes

@{
    Layout = "_LayoutAdmin";
}

<h2>Produtos</h2>
<hr>
<a asp-controller="Gestao" asp-action="NovoProduto" class="btn btn-success">Adicionar produto</a>
<hr>

<script>
    $(document).ready( function () {
    $('#TabelaDeProduto').DataTable({
        "info" : false,
        "language" : {
            "lengthMenu" : "Mostrando _MENU_ registros por página",
            "zeroRecords" : "Resultado não encontrado",
            "info" : "Mostrando página _PAGE_ de _PAGES_",
            "infoEmpty" : "Nenhum resgistro disponível",
            "search" : "Pesquisar:",
            "paginate" : {
                "first" : "Primeiro",
                "last" : "Ultimo",
                "next" : "Próximo",
                "previous" : "Anterior",
            }
        }
    });
    });
</script>

<table id="TabelaDeProduto" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Categoria</th>
            <th>Fornecedor</th>
            <th>Preço de custo</th>
            <th>Preço de venda</th>
            <th>Unidade de medida</th>
            <th>Ações</th>
        </tr>
        <tbody>
            @foreach (var produto in Model)
            {
                <tr>
                    <td>@produto.Id</td>
                    <td>@produto.Nome</td>
                    <td>@produto.Categoria.Nome</td>
                    <td>@produto.Fornecedor.Nome</td>
                    <td>@produto.PrecoDeCusto</td>
                    <td>@produto.PrecoDeVenda</td>
                    <td>
                        @if (@produto.UnidadeDeMedida == 1)
                        {
                            <p>Litro</p>
                        }
                        else if (@produto.UnidadeDeMedida == 2)
                        {
                            <p>Unidade</p>
                        }
                        else
                        {
                            <p>Kilo</p>
                        }
                    </td>
                    <td>
                        <a class="btn btn-success" href="/Gestao/EditarProduto/@produto.Id">Editar</a>

                        <form asp-action="Excluir" asp-controller="Produtos" style="display: inline;">
                            <input type="hidden" name="id" id="id" value="@produto.Id">
                            <button class="btn btn-danger">Excluir</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </thead>
</table>