@model SuperMarket.ValidacaoDTO.ProdutoDTO

@{
    Layout = "_LayoutAdmin";
}

<h3>Novo produto</h3>
<hr>
<form class="form-horizontal" asp-controller="Produtos" asp-action="Salvar" method="POST">
    <input type="hidden" asp-for="Id" value="0">
    <label asp-for="Nome">Nome</label>
    <input type="text" asp-for="Nome" class="form-control" placeholder="Nome do Produto">
    <span asp-validation-for="Nome"></span>
    <br>
    <label asp-for="CategoriaId">Categoria</label>
    <select class="form-control" asp-for="CategoriaId" asp-items='@(new SelectList(@ViewBag.ListaCategorias,"Id","Nome"))'></select>
    <br>
    <label asp-for="FornecedorId">Fornecedores</label>
    <select class="form-control" asp-for="FornecedorId" asp-items='@(new SelectList(@ViewBag.ListaFornecedores,"Id","Nome"))'></select>
    <br>
    <label asp-for="PrecoDeCusto">Preço de custo</label>
    <input type="number" step="any" asp-for="PrecoDeCusto" class="form-control" placeholder="R$">
    <span asp-validation-for="PrecoDeCusto"></span>
    <br>
    <label asp-for="PrecoDeVenda">Preço de venda</label>
    <input type="number" step="any" asp-for="PrecoDeVenda" class="form-control" placeholder="R$">
    <span asp-validation-for="PrecoDeVenda"></span>
    <br>
    <label asp-for="UnidadeDeMedida">Unidade de medida</label>
    <select class="form-control" asp-for="UnidadeDeMedida">
        <option value="0">Selecione...</option>
        <option value="1">Litro</option>
        <option value="2">Unidade</option>
        <option value="3">Kilo</option>
    </select>
    <br> 
    <button class="btn btn-success">Cadastrar</button>
</form>